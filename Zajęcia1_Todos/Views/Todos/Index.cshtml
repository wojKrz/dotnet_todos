@model IEnumerable<Zajęcia1_Todos.Models.TodoGroup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <div >@Html.DisplayFor(modelItem => item.ForDay)</div>
            </td>
        </tr>
            @foreach(var todo in item.Todos)
            {
                @(await Html.PartialAsync("_TodoItem", todo))
            }
        }
    </tbody>
</table>
